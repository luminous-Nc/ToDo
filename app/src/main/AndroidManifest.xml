<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luminous.todo">

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="ToDo"
            android:launchMode="singleTask"
            android:theme="@style/TodayTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReadLater"
            android:launchMode="singleTask"
            android:theme="@style/ReadLaterTheme"/>
        <activity
            android:name=".ReadData"
            android:label="@string/title_activity_read_data"
            android:theme="@style/ReadDataTheme" />
        <activity
            android:name=".AddPage"
            android:label="新内容"
            android:theme="@style/AddPageTheme">
        </activity>
    </application>

</manifest>